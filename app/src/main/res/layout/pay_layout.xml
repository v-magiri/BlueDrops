<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="20dp"
        app:cardElevation="8dp"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:id="@+id/payAction">
                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/payImage"
                        android:layout_gravity="center"
                        android:src="@drawable/pay"/>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/payImage"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Enter Phone Number" />
                    <EditText
                        android:id="@+id/checkOutPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:ems="10"
                        android:layout_below="@+id/textView"
                        android:inputType="phone"
                        android:text="+254 700000000" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payAction"
                android:padding="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelBtn"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/signbackground"
                    app:backgroundTint="@null"
                    android:layout_marginStart="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay"
                    android:id="@+id/payBtn"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/paybg"
                    app:backgroundTint="@null"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>