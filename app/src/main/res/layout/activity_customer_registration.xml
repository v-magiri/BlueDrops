<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer_registration">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:src="@drawable/icon_bluedropsbannner"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fNameEditTxt"
                        android:inputType="textPersonName"
                        android:hint="Enter FirstName"
                        android:textSize="24dp"
                        android:paddingStart="20dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lNameEditText"
                    android:inputType="textPersonName"
                    android:hint="Enter Last Name"
                    android:textSize="24dp"
                    android:paddingStart="20dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customerEmailEditTxt"
                        android:textSize="24dp"
                        android:hint="Enter Email"
                        android:paddingStart="20dp"
                        android:inputType="textEmailAddress"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:inputType="phone"
                        android:hint="Enter Phone Number"
                        android:id="@+id/customer_PhoneNumber"
                        android:paddingStart="20dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_marginVertical="10dp">
                    <AutoCompleteTextView
                        android:id="@+id/locationAutoComplete"
                        android:inputType="none"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/vendor"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_marginVertical="10dp">
                    <AutoCompleteTextView
                        android:id="@+id/vendorAutoComplete"
                        android:inputType="none"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:hint="Enter a Password"
                        android:id="@+id/password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:hint="Confirm Password"
                        android:id="@+id/repeat_Password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="10dp"
                        android:id="@+id/registerBtn"
                        android:text="Register"
                        android:textSize="24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already Have Account? Signin"
                        android:textColor="@color/blue"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/signin"
                        android:layout_marginBottom="20dp"/>


            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>